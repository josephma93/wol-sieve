{
  "$schema": "https://json.schemastore.org/prettierrc",
  "useTabs": true,
  "tabWidth": 4,
  "printWidth": 120,
  "singleQuote": true,
  "semi": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSpacing": true,
  "overrides": [
    {
      "files": ["*.json", ".prettierrc", "*.yml", "*.yaml"],
      "options": {
        "useTabs": false,
        "tabWidth": 2,
        "trailingComma": "none",
        "proseWrap": "preserve"
      }
    },
    {
      "files": "Dockerfile",
      "options": {
        "tabWidth": 2,
        "singleQuote": false
      }
    }
  ]
}
